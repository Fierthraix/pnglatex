BACKGROUND=Transparent
FNAME=`date +%s%N`
DISPLAY=\$
PACKAGES=

while getopts b:df:o:p: ARG; do
    case $ARG in
	b)
	    BACKGROUND=$OPTARG
	    ;;
	d)
	    DISPLAY=\$\$
	    ;;
	f)
	    FORMULA=$OPTARG
	    ;;
	o)
	    FNAME=$OPTARG
	    ;;
	p)
	    IFS=":"
	    PLIST=($OPTARG)
	    
	    for P in $PLIST; do
		PACKAGES=$PACKAGES\\usepackage{$P}
	    done
	    ;;
    esac
done

if [ ! "$FORMULA" ]; then
    echo "No input formula."
    exit 0
fi;

PREFIX="\documentclass[10pt]{article}$PACKAGES\pagestyle{empty}\begin{document}$DISPLAY"
SUFFIX="$DISPLAY\end{document}"

echo $PREFIX$FORMULA$SUFFIX > $FNAME.tex
latex -halt-on-error $FNAME.tex > /dev/null
dvipng -bg $BACKGROUND -o $FNAME.png -q -T tight -z 9 $FNAME.dvi > /dev/null
rm $FNAME.aux $FNAME.dvi $FNAME.log $FNAME.tex
